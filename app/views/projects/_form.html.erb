<div class="panel">
<%= form_for(@project, html: { multipart: true }) do |f| %>
  <% if @project.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@project.errors.count, "error") %> prohibited this project from being saved:</h2>

      <ul>
      <% @project.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row">
    <div class="samll-12 columns">
      <div class="row collapse prefix-radius">
        <div class="field">
          <div class="small-3 columns">
            <span class="prefix">项目名称</span>
          </div>
          <div class="small-9 columns">
              <%= f.text_field :name %>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <div class="row">
    <div class="samll-12 columns">
      <div class="row collapse prefix-radius">
        <div class="field">
          <div class="small-3 columns">
            <span class="prefix">年化收益率</span>
          </div>
          <div class="small-9 columns">
               <%= f.text_field :yield_yearly %>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <div class="row">
    <div class="samll-12 columns">
      <div class="row collapse prefix-radius">
        <div class="field">
          <div class="small-3 columns">
            <span class="prefix">投资周期</span>
          </div>
          <div class="small-9 columns">
              <%= f.number_field :investment_cycle %>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <div class="row">
    <div class="samll-12 columns">
      <div class="row collapse prefix-radius">
        <div class="field">
          <div class="small-3 columns">
            <span class="prefix">风险等级</span>
          </div>
          <div class="small-9 columns">
              <%= f.text_field :risk_rank %>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <div class="row">
    <div class="samll-12 columns">
      <div class="row collapse prefix-radius">
        <div class="field">
          <div class="small-3 columns">
            <span class="prefix">借款总额</span>
          </div>
          <div class="small-9 columns">
              <%= f.text_field :borrowing_total %>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <div class="row">
    <div class="samll-12 columns">
      <div class="row collapse prefix-radius">
        <div class="field">
          <div class="small-3 columns">
            <span class="prefix">起投金额</span>
          </div>
          <div class="small-9 columns">
              <%= f.number_field :min_investment_amount %>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <div class="row">
    <div class="samll-12 columns">
      <div class="row collapse prefix-radius">
        <div class="field">
          <div class="small-3 columns">
            <span class="prefix">最晚起息</span>
          </div>
          <div class="small-9 columns">
              <%= f.date_select :latest_payment_date %>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <div class="row">
    <div class="samll-12 columns">
      <div class="row collapse prefix-radius">
        <div class="field">
          <div class="small-3 columns">
            <span class="prefix">最晚到期</span>
          </div>
          <div class="small-9 columns">
            <%= f.date_select :latest_expire_date %>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <div class="row">
    <div class="samll-12 columns">
      <div class="row collapse prefix-radius">
        <div class="field">
          <div class="small-3 columns">
            <span class="prefix">偿还方式</span>
          </div>
          <div class="small-9 columns">
               <%= f.text_field :repay_type %>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <div class="row">
    <div class="samll-12 columns">
      <div class="row collapse prefix-radius">
        <div class="field">
          <div class="small-3 columns">
            <span class="prefix">项目介绍</span>
          </div>
          <div class="small-9 columns">
               <%= f.text_area :introduction %>
               <%#= f.kindeditor :introduction ,:window_onload => true%>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <div class="row">
    <div class="samll-12 columns">
      <div class="row collapse prefix-radius">
        <div class="field">
          <div class="small-3 columns">
            <span class="prefix">资产说明</span>
          </div>
          <div class="small-9 columns">
               <%= f.kindeditor :assets_explain ,:window_onload => true%>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <div class="row">
    <div class="samll-12 columns">
      <div class="row collapse prefix-radius">
        <div class="field">
          <div class="small-3 columns">
            <span class="prefix">风控措施</span>
          </div>
          <div class="small-9 columns">
               <%= f.kindeditor :risk_control_measures ,:window_onload => true%>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <div class="row">
    <div class="samll-12 columns">
      <div class="row collapse prefix-radius">
        <div class="field">
          <div class="small-3 columns">
            <span class="prefix">担保情况</span>
          </div>
          <div class="small-9 columns">
               <%= f.kindeditor :guarantee_status,:window_onload => true %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="samll-12 columns">
      <div class="row collapse prefix-radius">
        <div class="field">
          <div class="small-3 columns">
            <span class="prefix">资金流向</span>
          </div>
          <div class="small-9 columns">
              <%= f.kindeditor :money_flow,:window_onload => true %>
          </div>
        </div>
      </div>
    </div>
    <br>
    <div class="row">
      <div class="samll-12 columns" style="text-align: center; margin: 0 auto;">
       
        <div class="row collapse prefix-radius">
          <div class="field">
            <div class="small-3 columns">
              <span class="prefix">证明文件[上传]</span>
            </div>
            <div class="small-9 columns">
              <%#= f.file_field :files, multiple: true %>
              <input multiple="multiple" type="file" name="files[]" id="project_files" />
            </div>
          </div>
        </div>
      </div>
    </div>
    
    <div class="row">
      <div class="samll-12 columns" style="text-align: center; margin: 0 auto;">
       
        </br>
      </div>
    </div>
    
    <div class="row">
      <div class="samll-12 columns" style="text-align: center; margin: 0 auto;">
        <input type="submit" name="newgroup" class="button radius" style="width:80%;" value="发布" />
      </div>
    </div>
  </div>

</div>
<% end %>